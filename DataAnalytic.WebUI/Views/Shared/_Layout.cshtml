<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/harvest_chosen")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/harvest_chosen")
    <script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
    @*<script src="~/Scripts/jquery-1.8.3.js" type="text/javascript"></script>*@

</head>
<body>
    <div id="header">
        <div class="title">FOR MY KIDS</div>
        <div style="float: right">@Html.Partial("_LoginPartial")</div>
    </div>
    @if (Request.IsAuthenticated)
    {
        <div id="categories">
            <ul>
                <li>@Html.ActionLink("Youtube Search", "Search", "YoutubeVideoManager")</li>
                <li>@Html.ActionLink("Video Manager", "Index", "Video")</li>
                <li>@Html.ActionLink("Search Property", "Search", "Property")</li>
            </ul>
        </div>
    }
    <div id="content">
        @RenderBody()


        @RenderSection("scripts", required: false)

    </div>
</body>
</html>
